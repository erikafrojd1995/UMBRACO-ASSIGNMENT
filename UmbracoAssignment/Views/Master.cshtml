@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
	Layout = null;
}


@{
    var site= Model.Root();
	var selection = Umbraco.ContentAtRoot().FirstOrDefault()
    .Children()
    .Where(x => x.IsVisible());
}




