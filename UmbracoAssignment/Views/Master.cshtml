	<body class="landing">

		<!-- Header -->
			<header id="header" class="alt">
				<h1><a style="color:#E5F88B;" href="/">Cake Factory</a></h1>
				<a style="color:#E5F88B;" href="#nav">Menu</a>
			</header>
			

        <!--Nav-->
		<nav id="nav">
           
                <ul>
                   
                    <!--<li><a href="/">Home</a></li>-->
                    <li>
                        <a class="nav-link" @Html.Raw(Model.Id == site.Id ? "navi-link--active" : "")" href="@site.Url")>
                          @site.Name  
                        </a>
                    </li>
                   
                    @foreach (var item in selection)
                        {
                        <li>
                            <a class="nav-link @(item.IsAncestorOrSelf(Model) ? "nav-link--active" : null)" href="@item.Url()">@item.Name</a>
                        </li>
                        
                         
                        }
                        
              
            </ul>
		</nav>
		    
			
    @RenderBody()
    
